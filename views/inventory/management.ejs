<title> <% title %> </title>

<h1>  <% title %> </h1>

<%- messages() %>

<body> 
    <h2>Actions:</h2>
    <div class="form-container">
        <a href="/inv/add-classification" class="input">Add Classification</a>
        <a href="/inv/add-inventory" class="input">Add Inventory</a>
    </div>
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list to see the items belonging to the classification.</p>
    <!-- EJS block for classification dropdown -->
  <form id="classificationForm">
    <label for="classificationId">Choose a Classification:</label>
    <select id="classificationId" name="classificationId">
      <option value="">--Select a Classification--</option>
      <% if (typeof classifications !== 'undefined' && classifications.length) { %>
        <% classifications.forEach(classification => { %>
          <option value="<%= classification.classification_id %>">
            <%= classification.classification_name %>
          </option>
        <% }); %>
      <% } %>
    </select>
  </form>

  <!-- Empty table to be filled via JavaScript -->
  <table id="inventoryDisplay"></table>

  <!-- Message for users with JavaScript disabled -->
  <noscript>JavaScript must be enabled to use this page.</noscript>

   <!-- JavaScript to fetch inventory and populate table -->
  <script src="/js/inventory.js"></script>
</body>